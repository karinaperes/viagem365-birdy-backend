{
  "swagger": "2.0",
  "info": {
    "title": "Viagem365",
    "description": "Description",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "securityDefinitions": {
    "apiKeyAuth": {
      "type": "apiKey",
      "in": "header",
      "name": "authorization",
      "description": "Token de Autenticação"
    }
  },
  "paths": {
    "/login/": {
      "post": {
        "tags": [
          "Login"
        ],
        "description": "Login por email e senha de usuário cadastrado",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Login",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "email@email.com"
                },
                "password": {
                  "type": "string",
                  "example": "1234"
                }
              },
              "required": [
                "email",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/usuario/": {
      "post": {
        "tags": [
          "Usuario"
        ],
        "description": "Cadastra novo usuário, validação de duplicidade de email e cpf, busca endereço a partir do CEP informado",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Cadastra novo usuário",
            "schema": {
              "type": "object",
              "properties": {
                "nome": {
                  "type": "string",
                  "example": "Karina"
                },
                "sexo": {
                  "type": "string",
                  "example": "Feminino"
                },
                "cpf": {
                  "type": "string",
                  "example": "83526448078"
                },
                "cep": {
                  "type": "string",
                  "example": "88066242"
                },
                "numero": {
                  "type": "string",
                  "example": "577"
                },
                "complemento": {
                  "type": "string",
                  "example": "Apto 1"
                },
                "email": {
                  "type": "string",
                  "example": "email@email.com"
                },
                "data_nascimento": {
                  "type": "string",
                  "example": "1979-03-22"
                },
                "password": {
                  "type": "string",
                  "example": "1234"
                }
              },
              "required": [
                "nome",
                "sexo",
                "cpf",
                "cep",
                "numero",
                "email",
                "data_nascimento",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "409": {
            "description": "Conflict"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/usuario/{id}": {
      "get": {
        "tags": [
          "Usuario"
        ],
        "description": "Lista dados do usuário autenticado",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": [
          "Usuario"
        ],
        "description": "Atualiza dados do usuário autenticado",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Atualiza usuário",
            "schema": {
              "type": "object",
              "properties": {
                "nome": {
                  "type": "string",
                  "example": "Nome Alterado"
                },
                "sexo": {
                  "type": "string",
                  "example": "Feminino"
                },
                "cpf": {
                  "type": "string",
                  "example": "83526448078"
                },
                "cep": {
                  "type": "string",
                  "example": "88066242"
                },
                "endereco": {
                  "type": "string",
                  "example": "Servidao Alfredo"
                },
                "numero": {
                  "type": "string",
                  "example": "577"
                },
                "complemento": {
                  "type": "string",
                  "example": "Apto 1"
                },
                "email": {
                  "type": "string",
                  "example": "email@email.com"
                },
                "data_nascimento": {
                  "type": "string",
                  "example": "1979-03-22"
                },
                "password": {
                  "type": "string",
                  "example": "1234"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Usuario"
        ],
        "description": "Exclui usuário autenticado, desde que não tenha locais cadastrados",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/local/": {
      "post": {
        "tags": [
          "Local"
        ],
        "description": "Cadastra novo local, buscando a cidade e o estado pelas coordenadas informadas, por usuário autenticado",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Cadastra novo local",
            "schema": {
              "type": "object",
              "properties": {
                "nome": {
                  "type": "string",
                  "example": "Lagoa do Peri"
                },
                "descricao": {
                  "type": "string",
                  "example": "Local muito bom para passar o dia com a família, lagoa própria pra banho e com opção de realizar trilha no local, há um restaurante na entrada da lagoa"
                },
                "coordenadas_geo": {
                  "type": "string",
                  "example": "-27.7292638,-48.5559065"
                }
              },
              "required": [
                "nome",
                "descricao",
                "coordenadas_geo"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "409": {
            "description": "Conflict"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "get": {
        "tags": [
          "Local"
        ],
        "description": "Lista todos os locais cadastrados pelo usuário autenticado",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/local/{id}": {
      "get": {
        "tags": [
          "Local"
        ],
        "description": "Lista local específico cadastrado pelo usuário autenticado",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": [
          "Local"
        ],
        "description": "Atualiza dados do local cadastrado pelo usuário autenticado",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Atualiza local",
            "schema": {
              "type": "object",
              "properties": {
                "nome": {
                  "type": "string",
                  "example": "Nome Alterado"
                },
                "descricao": {
                  "type": "string",
                  "example": "Local muito bom para passar o dia com a família, lagoa própria pra banho e com opção de realizar trilha no local, há um restaurante na entrada da lagoa"
                },
                "coordenadas_geo": {
                  "type": "string",
                  "example": "-27.7292638,-48.5559080"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Local"
        ],
        "description": "Exclui local cadastrado pelo usuário autenticado",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "security": [
    {
      "apiKeyAuth": []
    }
  ]
}